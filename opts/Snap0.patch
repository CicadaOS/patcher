         // Set wavelet denoise mode
         if (mParameters.getSupportedDenoiseModes() != null) {
-            String denoise = mPreferences.getString(CameraSettings.KEY_DENOISE,
-                    mActivity.getString(R.string.pref_camera_denoise_default));
