From: YumeMichi <do4suki@gmail.com>
Date: Fri, 18 Aug 2017 18:17:49 +0800
Subject: [PATCH] [2/2] CMPartss: Pixel Navbar animation toggle

Signed-off-by: YumeMichi <do4suki@gmail.com>
---
 res/values/strings.xml      | 4 ++++
 res/xml/button_settings.xml | 7 +++++++
 2 files changed, 11 insertions(+)

diff --git a/res/values/strings.xml b/res/values/strings.xml
index 21b8b78..238208d 100644
--- a/res/values/strings.xml
+++ b/res/values/strings.xml
@@ -166,6 +166,10 @@
     <string name="adj_intensity_title">Intensity</string>
     <string name="adj_contrast_title">Contrast</string>
 
+    <!-- Navbar Animation -->
+    <string name="pixel_navbar_anim_title">Pixel navbar animation</string>
+    <string name="pixel_navbar_anim_summary">Enables the pixel navbar animation</string>
+
     <!-- Button settings -->
     <string name="button_pref_title">Buttons</string>
     <string name="hardware_keys_power_key_title">Power button</string>
diff --git a/res/xml/button_settings.xml b/res/xml/button_settings.xml
index dc3bed3..9ec0779 100644
--- a/res/xml/button_settings.xml
+++ b/res/xml/button_settings.xml
@@ -64,6 +64,13 @@
             <intent android:action="com.android.settings.action.NAV_BAR_TUNER" />
         </PreferenceScreen>
 
+        <SwitchPreference
+            android:key="pixel_nav_animation"
+            android:title="@string/pixel_navbar_anim_title"
+            android:summary="@string/pixel_navbar_anim_summary"
+            android:dependency="navigation_bar"
+            android:defaultValue="true" />
+
         <ListPreference
             android:key="navigation_home_long_press"
             android:dialogTitle="@string/navigation_bar_home_long_press_title"
